<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
     <ImageView
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:id="@+id/communication_item_icon"
         android:src="@mipmap/app_icon" android:layout_margin="6dp"/>
    <TextView
        android:id="@+id/communication_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="成都信息工程学院资源环境学院地理信息系统专业2011级"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:minHeight="50dp"
        android:textSize="16sp"
        android:minLines="1"
        android:background="@drawable/blue_rounded_rectangle"
        android:gravity="center_vertical|left"/>
</LinearLayout>
